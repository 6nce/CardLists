{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "attributes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "attribute": {
            "type": "string"
          },
          "note": {
            "type": "string"
          }
        },
        "required": ["attribute", "note"]
      }
    },
    "sets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "notes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "variations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "variation": {
                  "type": "string"
                },
                "note": {
                  "type": "string"
                }
              },
              "required": ["variation"]
            }
          },
          "parallels": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "of": {
                  "type": "integer",
                  "minimum": 1
                },
                "notes": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": ["name"]
            }
          },
          "cards": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "number": {
                  "type": "string",
                  "pattern": "^[a-zA-Z0-9-]+$"
                },
                "name": {
                  "type": "string"
                },
                "attributes": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "note": {
                  "type": "string"
                },
                "variations": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "variation": {
                        "type": "string"
                      },
                      "note": {
                        "type": "string"
                      }
                    },
                    "required": ["variation"]
                  }
                },
                "parallels": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "of": {
                        "type": "integer",
                        "minimum": 1
                      },
                      "notes": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": ["name"]
                  }
                }
              },
              "required": ["name"]
            }
          }
        },
        "required": ["name", "cards"]
      }
    }
  },
  "required": ["name", "sets"]
}
